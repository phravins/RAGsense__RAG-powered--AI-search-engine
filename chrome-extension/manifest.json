{
  "name": "RAGsense",
  "description": "Ask questions about any page you visit.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [{
  "matches": ["<all_urls>"],
  "js": ["content.js"],
  "run_at": "document_idle"
}]
  
}
